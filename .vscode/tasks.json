{
    "version": "2.0.0",
    "tasks": [
      {
        "label": "cargo-watch",
        "type": "shell",
        "command": "cargo",
        "args": ["watch", "-x", "run"],
        "problemMatcher": [],
        "group": {
          "kind": "build",
          "isDefault": true
        },
        "presentation": {
          "echo": true,
          "reveal": "always",
          "focus": false,
          "panel": "shared",
          "showReuseMessage": true,
          "clear": false
        },
        "runOptions": {
          "runOn": "folderOpen"
        }
      }
    ]
  }
  